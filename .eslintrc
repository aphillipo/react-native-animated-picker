{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true,
  },
  "globals": {
    "React": true,
    "__DEV__": true,
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
    }
  },
  "plugins": [
    "react",
  ],
  "rules": {
    "strict": [2, "global"],
    "no-var": 0,
    "func-names": 0,
    "one-var": 0,
    "indent": [2, 2, {"SwitchCase": 1}],
    "max-len": ["error", 110, 2, {"ignoreUrls": true}],
    "import/no-unresolved": 0,
    "no-underscore-dangle": 0,
  }
}
